<%- include('./partials/header.ejs') %>
    <title>Boats</title>
    </head>

    <body>
        <%- include('./partials/navbar.ejs', {title: 'Boat' , active: 'Boat' }) %>
            <table class="table table-striped table-hover table-sm">
                <caption>List of boats</caption>
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                        <th scope="col">Type</th>
                        <th scope="col">Length</th>
                        <th scope="col">Owner</th>
                        <th scope="col">Loads</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <%= id %>
                        </td>
                        <td>
                            <%= name %>
                        </td>
                        <td>
                            <%= type %>
                        </td>
                        <td>
                            <%= length %>
                        </td>
                        <td>
                            <%= owner %>
                        </td>
                        <td>
                            <a class="btn btn-info" href="/boats/<%= id %>/loads" role="button">Details <i
                                    class="fa fa-info-circle"></i></a>
                        </td>
                    </tr>
                </tbody>
            </table>
    </body>

    </html>